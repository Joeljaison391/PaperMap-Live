{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PaperMap Live",
  "version": "1.0.0",
  "identifier": "com.papermap.live",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PaperMap Live",
        "width": 800,
        "height": 600,
        "decorations": false,
        "fullscreen": false,
        "maximized": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://* data: blob:; img-src 'self' https://* data: blob:; connect-src 'self' https://* data: blob:; worker-src 'self' blob:; child-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "PaperMap",
    "copyright": "Copyright Â© 2026 PaperMap"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/YOUR_USERNAME/PaperMap-Live/main/latest.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  }
}